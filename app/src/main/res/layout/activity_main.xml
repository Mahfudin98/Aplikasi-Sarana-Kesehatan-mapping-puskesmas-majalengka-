<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/home1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Halaman Utama"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <Button
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="430dp"
        android:background="@drawable/circle"
        android:onClick="cari"
        android:text="cari sarana kesehatan" />
    <Button
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-400dp"
        android:layout_marginBottom="430dp"
        android:background="@drawable/circle"
        android:onClick="daftar"
        android:text="daftar sarana kesehatan" />
    <Button
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-400dp"
        android:layout_marginBottom="430dp"
        android:background="@drawable/circle"
        android:onClick="peta"
        android:text="peta sarana kesehatan" />
    <Button
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-400dp"
        android:layout_marginBottom="430dp"
        android:background="@drawable/circle"
        android:onClick="tentang"
        android:text="tentang" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="-270dp"
        android:text="\u00a9 Sarana Kesehatan"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>